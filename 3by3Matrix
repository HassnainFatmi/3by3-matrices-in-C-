//sorting an array without pointers
#include <iostream>
#include <cmath>
using namespace std;
int const MAX = 20;
void array_sorter(int[], int);
int main()
{
	int  arr[MAX];
	int length;
	cout << "Enter length of array : ";
	cin >> length;
	cout << "Enter the array :";
	for (int i = 0; i < length; i++)
	{
		cin >> arr[i];
	}

	array_sorter(arr, length);

	//Print the sorted array
	cout << "The sorted array is : " << endl << "\t\t\t";
	for (int i = 0; i < length; i++)
	{
		cout << arr[i] << ", ";
	}
	cout << endl;
	return 0;
}
void array_sorter(int ar[], int l)
{
	// Now sorting the array
	for (int i = 0; i < l; i++)
	{
		for (int j = i; j < l; j++)
		{
			if (abs(ar[i]) < abs(ar[j]))       //comparing the absolute values
			{
				int temp;
				temp = ar[i];
				ar[i] = ar[j];
				ar[j] = temp;
			}
		}
	}
}


//array sorting with pointers
