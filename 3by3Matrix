#include <iostream>
#include <iomanip>
using namespace std;

int const R = 10, C = 10;
void input(int r, int c,float arr[][C]);
void c_checker(int r, int c, float arr[][C]);

int main()
{
	int rows, columns;
	float A[R][C];
	cout << "Enter the no of rows : ";
	cin >> rows;
	cout << "Enter the no of Columns : ";
	cin >> columns;
	input(rows, columns, A);
	c_checker(rows, columns, A);


}
void input(int r, int c,float arr[][C])
{
	for (int i = 0; i < r; i++)
	{
		for (int j = 0; j < c; j++)
		{
			cout << "Enter the element (" << i + 1 << "," << j + 1 << ")";
			cin >> arr[i][j];
		}
	}
	for (int i = 0; i < r; i++)
	{
		cout << "\t\t";
		for (int j = 0; j < c; j++)
		{
			cout << setw(10) << arr[i][j];
		}
		cout << "\n\n";
	}
}
void c_checker(int r, int c, float arr[][C])
{

	float sum[C];
	for (int i = 0; i < C; i++)
	{
		sum[i] = 0;
	}
	for (int i=0;i<c;i++)
	{
		for (int j = 0; j < c; j++)
		{
			sum[j] += arr[i][j];
		}
	}
	//sorting the sum array in desecnding order
	int NO_C=1;
	for (int i = 0; i < c; i++)
	{
		float static max = sum[i];
		cout << "Sum " << i+1 << " is " << sum[i] << endl;
		if (sum[i]>max)
		{
			max = sum[i];
			NO_C = i+1;
		}
	}
	cout << "The Columns with max sum : " << NO_C << endl;
}
